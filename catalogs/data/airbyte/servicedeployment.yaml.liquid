apiVersion: deployments.plural.sh/v1alpha1
kind: ServiceDeployment
metadata:
  name: airbyte-{{ context.cluster }}
  namespace: apps
spec:
  namespace: airbyte
  git:
    folder: helm/airbyte
    ref: main
  repositoryRef:
    kind: GitRepository
    name: infra
    namespace: infra
  helm:
    version: "1.x.x"
    chart: airbyte
    repository:
      name: airbyte
      namespace: apps
    valuesFiles:
    - {{ context.cluster }}.yaml.liquid
  imports:
  - stackRef:
      name: airbyte-{{ context.cluster }}
      namespace: infra
  configuration:
    cluster: {{ context.cluster }}
    hostname: {{ context.hostname }}
  clusterRef:
    kind: Cluster
    name: {{ context.cluster }}
    namespace: infra

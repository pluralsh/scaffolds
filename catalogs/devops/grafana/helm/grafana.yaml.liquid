{% raw %}
{% assign import_key =  'grafana-' | append: cluster.handle %}

admin:
  existingSecret: grafana-credentials
{% endraw %}


ingress:
  enabled: true
  annotations:
    kubernetes.io/tls-acme: "true"
    kubernetes.io/ingress.class: "nginx"
    cert-manager.io/cluster-issuer: plural
    nginx.ingress.kubernetes.io/force-ssl-redirect: 'true'
  hosts:
  - {{ context.hostname }}
  tls:
  - hosts:
    - {{ context.hostname }}
    secretName: grafana-tls


persistence:
  enabled: false


envFromSecrets:
- name: grafana-env

grafana.ini:
  plugins:
    allow_loading_unsigned_plugins: victoriametrics-datasource
  log:
    level: debug
  database:
    type: postgres
    user: grafana
    name: grafana
  auth.generic_oauth:
    allow_sign_up: true
    api_url: https://oidc.plural.sh/userinfo
    auth_url: https://oidc.plural.sh/oauth2/auth
    client_id: {% raw %}{{ imports[import_key].oidc_client_id }}{% endraw %}
    enabled: true
    groups_attribute_path: groups
    name: Plural
    role_attribute_path: "null"
    scopes: openid profile
    auto_assign_org_role: Admin
    skip_org_role_sync: 'true'
    token_url: https://oidc.plural.sh/oauth2/token
  server:
    root_url: {{ context.hostname}}

extraObjects:
- apiVersion: v1
  kind: Secret
  metadata:
    name: grafana-env
  stringData:
    GF_AUTH_GENERIC_OAUTH_CLIENT_SECRET: {% raw %}{{ imports[import_key].oidc_client_secret }}{% endraw %}
    GF_DATABASE_HOST: {% raw %}{{ imports[import_key].postgres_host }}{% endraw %}
    GF_DATABASE_PASSWORD: {% raw %}{{ imports[import_key].postgres_password }}{% endraw %}
- apiVersion: v1
  kind: Secret
  metadata:
    name: grafana-credentials
  stringData:
    admin-user: admin
    admin-password: {% raw %}{{ imports[import_key].admin_password }}{% endraw %}
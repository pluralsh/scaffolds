apiVersion: deployments.plural.sh/v1alpha1
kind: ServiceDeployment
metadata:
  name: grafana-{{ context.cluster }}
  namespace: apps
spec:
  name: grafana
  namespace: grafana
  git:
    folder: helm/grafana
    ref: main
  repositoryRef:
    kind: GitRepository
    name: infra
    namespace: infra
  helm:
    version: "8.6.x"
    chart: grafana
    url: https://grafana.github.io/helm-charts
    valuesFiles:
    - grafana.yaml.liquid
  imports:
  - stackRef:
      name: grafana-{{ context.cluster }}
      namespace: apps
  configuration:
    cluster: {{ context.cluster }}
    stackName: grafana-{{ context.cluster }}
  clusterRef:
    kind: Cluster
    name: mgmt
    namespace: infra

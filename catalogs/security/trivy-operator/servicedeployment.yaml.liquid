apiVersion: deployments.plural.sh/v1alpha1
kind: ServiceDeployment
metadata:
  name: trivy-operator-{{ context.cluster }}
  namespace: apps
spec:
  namespace: trivy-operator
  git:
    folder: helm/trivy-operator
    ref: main
  repositoryRef:
    kind: GitRepository
    name: infra
    namespace: infra
  helm:
    version: "0.x.x"
    chart: trivy-operator
    repository:
      name: trivy-operator
      namespace: apps
    valuesFiles:
    - {{ context.cluster }}.yaml.liquid
  configuration:
    cluster: {{ context.cluster }}
  clusterRef:
    kind: Cluster
    name: {{ context.cluster }}
    namespace: infra

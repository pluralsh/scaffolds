apiVersion: deployments.plural.sh/v1alpha1
kind: ServiceDeployment
metadata:
  name: trivy-{{ context.cluster }}
  namespace: apps
spec:
  namespace: trivy
  git:
    folder: helm/trivy
    ref: main
  repositoryRef:
    kind: GitRepository
    name: infra
    namespace: infra
  helm:
    version: "0.x.x"
    chart: trivy
    repository:
      name: trivy
      namespace: apps
    valuesFiles:
    - {{ context.cluster }}.yaml.liquid
  {% comment %}imports:{% endcomment %}
  {% comment %}- stackRef:{% endcomment %}
      {% comment %}name: trivy-{{ context.cluster }}{% endcomment %}
      {% comment %}namespace: infra{% endcomment %}
  configuration:
    cluster: {{ context.cluster }}
    hostname: {{ context.hostname }}
  clusterRef:
    kind: Cluster
    name: {{ context.cluster }}
    namespace: infra

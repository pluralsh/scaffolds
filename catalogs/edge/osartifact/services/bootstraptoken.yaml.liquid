{% raw %}
apiVersion: deployments.plural.sh/v1alpha1
kind: Project
metadata:
  name: {{ configuration.project }}
spec:
  name: {{ configuration.project }}
---
apiVersion: deployments.plural.sh/v1alpha1
kind: BootstrapToken
metadata:
  name: pluralos-{{ configuration.name }}
spec:
  {% if configuration.email %}user: {{ configuration.email }}{% endif %}
  projectRef:
    name: {{ configuration.project }}
  tokenSecretRef:
    name: pluralos-{{ configuration.name }}-bootstrap-token
{% endraw %}
k8s-monitoring:
  cluster:
    name: {{ cluster.Handle }}

  externalServices:
    prometheus:
      host: {{ configuration.prometheusHost }}
      basicAuth:
        username: {{ configuration.prometheusUser }}
        password: {{ configuration.prometheusPassword }}
    loki:
      host: {{ configuration.lokiHost }}
      basicAuth:
        username: {{ configuration.lokiUser }}
        password: {{ configuration.lokiPassword }}